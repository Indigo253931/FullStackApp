 # Tells app where to get gems
ruby "2.2.5"

 gem "sinatra", '~>1.4.6' 
  # Allows you to use and run Sinatra record

 gem 'sinatra-activerecord'
 # Allows you to use Sinatra with ActiveRecord
 
 gem "activerecord", '~>4.2.3'
 # Provides class methods, allows Object Relational Mapping & more
 
 gem 'pg', '~>0.18.2'
 # Allows you to use postgresql as a DBMS for app

 gem 'tux', '~>0.3.0'
 # Provides an interactive shell for object creation

 gem 'rake'
 # Provides tasks & dependencies that can be specified in Ruby syntax
 
 gem 'rerun'
 # Ruby version of nodemon
 
 gem 'sass-rails'