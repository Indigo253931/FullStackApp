<div class='flexbox_container' id='flex_strain_display'>
	<div class='flexbox_item' id='activity_details'>
	  <% @activity.strains.each do |strain| %>
      <div class='flexbox_item' id='activity_menu_item'>
        <a href="/strains/<%= strain.id %>" class='strain_id_link'><%= strain.name %>
        </a>
      </div>
    <% end %>

		<h2><%= @activity.name %></h2> 

		<h3><%= @activity.kind %></h3>
			<img src="<%= @activity.media %>" height="300px" width="300px"/>
				<div class='flexbox_item' id='button'>
		<a href="/activities/<%= @activity.id %>/edit">
			<button class='btn'>Edit</button>
		</a>
		<form method="post" action="/activities/<%= @activity.id %>" class='button_form'>
			<input class='btn' type="submit" value="Delete">
				<input name="_method" type="hidden" value='delete' >
		</form>
	</div>

</div>

