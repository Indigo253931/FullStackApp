<h1>Strains</h1>
<a class="btn" href="/strains/new">Add Strain</a>

<div class="strains">
  <% @strains.each do |strain| %>
  <div class="row">
    <ul>
      <li>
        <h2>
          <a href="/strains/<%= strain.id %>">
            <%= strain.name %>
          </a>
          </a>
        </h2>
      </li>
      <li>
        <a href="/strains/<%= strain.id %>/edit">
          Edit
        </a>
      </li>
      <li>
            <%= strain.kind %>
       
            </li>
            <li>
            <%= strain.rating %>
       
            </li>
            <li>
            <%= strain.review %>
       
            </li>
      
        <li>
          <form method="/strains/<%= strain.id %>/delete" action="post">
            <button>Delete</button>
          </form>
        
      </li>
    </ul>
  </div>
  <% end %>
</div>
