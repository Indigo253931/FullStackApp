<h1>Edit strain</h1>

<form action='/strains/<%= "#{@strain.id}" %>' method="post">
  <label for="strain[name]">Name:</label>
  <input name="strain[name]" value='<%= "#{@strain.name}" %>'>

  <label for="strain[type]">Typ:</label>
  <input name="strain[type]" value='<%= "#{@strain.type}" %>'>

  <label for="strain[rating]">Rating:</label>
  <input name="strain[rating]" value='<%= "#{@strain.rating}" %>'>

  <label for="strain[review]">Review:</label>
  <input name="strain[review]" value='<%= "#{@strain.review}" %>'>

  <input type="submit" value="Create">
</form>