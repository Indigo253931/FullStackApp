<h1>Edit Strain</h1>

<form action='/strains/<%= "#{@strain.id}" %>' method="post">
  <label class = "edit_form_input" for="strain[name]">Name:</label>
  <input class = "edit_form_input" name="strain[name]" value='<%= "#{@strain.name}" %>'>

  <label class = "edit_form_input" for="strain[rating]">Rating:</label>
  <input class = "edit_form_input" name="strain[rating]" value='<%= "#{@strain.rating}" %>'>

  <label class = "edit_form_input" for="strain[kind]">Kind:</label>
  <input class = "edit_form_input" name="strain[kind]" value='<%= "#{@strain.kind}" %>'>

  <label class = "edit_form_input" for="strain[review]">Review:</label>
  <input class = "edit_form_input" name="strain[review]" value='<%= "#{@strain.review}" %>'>

<input name="_method" type="hidden" value='put'>

  <input type="submit" value="Save">


 
</form>